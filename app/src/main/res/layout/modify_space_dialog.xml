<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_square"
        android:backgroundTint="@color/darkerGray">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifying space: ''"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                style="?attr/buttonBarStyle"
                android:backgroundTint="@color/lightSeaGreen"
                android:id="@+id/buttonModify"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="60dp"
                app:icon="@drawable/edit_24px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/modify_space_name_button"/>

            <Button
                style="?attr/buttonBarStyle"
                android:backgroundTint="@color/indianRed"
                android:id="@+id/buttonDelete"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/delete_24px"
                android:text="@string/delete_space_button"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>